{
    "name": "@permar-ai/git-secrets",
    "version": "1.0.0",
    "description": "Store and manage secrets directly in git, including permission control for users and teams",
    "author": "Matteo Berchier",
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "bin": {
        "git-secrets": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsup && npm run build:cli && npm run build:copy",
        "build:copy": "copyfiles -u 1 'src/db/*.sql' dist/",
        "build:cli": "npx tsc --project ./tsconfig.cli.json && npx tsc-alias -p ./tsconfig.cli.json",
        "format": "prettier --write src/**/*.ts tests/**/*.ts",
        "format:add": "npx lint-staged",
        "test": "jest"
    },
    "dependencies": {
        "better-sqlite3": "^11.3.0",
        "chalk": "^4.1.2",
        "child_process": "^1.0.2",
        "enquirer": "^2.4.1",
        "lodash": "^4.17.21",
        "openpgp": "^5.11.2",
        "reflect-metadata": "^0.2.2",
        "uuid": "^10.0.0",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.11",
        "@types/jest": "^29.5.13",
        "@types/lodash": "^4.17.9",
        "@types/node": "^22.7.3",
        "@types/uuid": "^10.0.0",
        "@types/yargs": "^17.0.33",
        "copyfiles": "^2.4.1",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "path": "^0.12.7",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsup": "^8.3.0",
        "typescript": "^5.6.2"
    },
    "files": [
        "dist/"
    ],
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    }
}
